{% extends 'layout.njk' %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{ member.avatar_url }}) no-repeat center center / cover "></section>

        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Member</div>
                <div>{{ member.name }}</div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>{{ member.email }}</div>
            </div>

            <div class="item">
                <div>Anivers√°rio</div>
                <div>{{ member.birth }}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{ "Masculino" if member.gender == "M" else "Feminino"}}</div>
            </div>

            <div class="item">
                <div>Tipo Santuineo</div>
                <div>{{ member.blood }}</div>
            </div>

            <div class="item">
                <div>Peso (KG)
                </div>
                <div>{{ member.weigth }}</div>
            </div>

            <div class="item">
                <div>Altura (CM)
                </div>
                <div>{{ member.heigth }}</div>
            </div>

            <a href="/members/{{ member.id }}/edit" class="button">Editar</a>

        </section>

    </div>

{% endblock content %}